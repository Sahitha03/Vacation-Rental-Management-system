<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input 
             name="username" 
             id="username"
             placeholder="Add a catchy title"
             type="text"
             class="form-control" 
             required
             />
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Give valid title</div>
        </div>
        
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input 
             name="email" 
             id="email"
             placeholder="Add a valid email"
             type="email"
             class="form-control" 
             required
             />
            <div class="valid-feedback">Valid email</div>
            <div class="invalid-feedback">Give valid email</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">password</label>
            <input 
             name="password" 
             id="password"
             placeholder="Add a valid password"
             type="password"
             class="form-control" 
             required
             />
            <div class="valid-feedback">Valid password</div>
            <div class="invalid-feedback">Give valid password</div>
        </div>
        <button class="btn btn-success">Signup</button>
        <br/>
        <br/>
    </form>
</div>
</div>